------+        checkEmailVerifiedRunnable = new Runnable() {
------+            @Override
------+            public void run() {
------+                FirebaseUser user = mAuth.getCurrentUser();
------+                if (user != null) {
------+                    user.reload().addOnCompleteListener(task -> {
------+                        if (user.isEmailVerified()) {
------+                            viewModel.saveUserToFirestore(user);
