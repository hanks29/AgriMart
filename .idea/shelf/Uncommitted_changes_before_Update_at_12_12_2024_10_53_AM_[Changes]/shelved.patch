------+                        } else {
------+                            handler.postDelayed(checkEmailVerifiedRunnable, 3000);
------+                        }
------+                    });
------+                }
------+            }
------+        };
------+        handler.post(checkEmailVerifiedRunnable);
------+    }
------+
------+    @Override
------+    protected void onDestroy() {
------+        super.onDestroy();
------+        handler.removeCallbacks(checkEmailVerifiedRunnable);
------+    }
