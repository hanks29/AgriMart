<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đặt màu nền cho khung -->
    <solid android:color="@android:color/white" />

    <!-- Đặt màu và độ rộng của đường viền -->
    <stroke
        android:color="#65424242"
        android:width="1dp"
        android:shape="rectangle" />

    <!-- Đặt khoảng cách giữa đường viền và nội dung bên trong -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp" />

    <!-- Tùy chọn để làm bo góc -->
    <corners
        android:radius="4dp" />
</shape>
