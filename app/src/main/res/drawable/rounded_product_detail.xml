<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền màu trắng cho ô -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền -->
        </shape>
    </item>

    <!-- Đường kẻ ở phía trên -->
    <item
        android:gravity="top"> <!-- Căn đường kẻ ở phía trên -->
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Màu của đường kẻ -->
            <size android:height="1dp" /> <!-- Độ dày của đường kẻ -->
        </shape>
    </item>
</layer-list>
