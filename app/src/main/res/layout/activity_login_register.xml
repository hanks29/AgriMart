<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login_Register">

    <!-- Thanh màu xanh lá cây ở trên cùng -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tabLayoutLR" />

    <!-- TabLayout được đặt ngay dưới thanh màu xanh -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutLR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/green"
        app:tabTextColor="@android:color/darker_gray"
        app:tabIndicatorColor="@color/green"
        app:tabIndicatorHeight="4dp"
        app:layout_constraintBottom_toTopOf="@+id/viewPagerLR" />

    <!-- ViewPager2 được đặt dưới TabLayout -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerLR"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutLR"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
