<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.MyProfile.MyRating.ProductRatingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Đánh giá sản phẩm"
            android:textColor="@color/black"
            android:textSize="11pt" />

        <TextView
            android:id="@+id/txt_gui"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Gửi"
            android:textColor="@color/green"
            android:textSize="9pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_light_blur" />

    <LinearLayout
        android:id="@+id/llLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <!-- Ratings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/apple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Móc khóa" />

                <TextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 cái" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_light_blur" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberRating"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:text="Chất lượng sản phẩm"
                android:textColor="@color/black"
                android:textSize="19sp" />
            <!-- Rating Bar and Number of Reviews -->
            <per.wsj.library.AndRatingBar
                android:id="@+id/rating"
                android:layout_width="172dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:rating="4.2"
                app:bgColor="#C0C0C0"
                app:keepOriginColor="true"
                app:starColor="#FFD700" />

            <TextView
                android:id="@+id/Satus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hài lòng"
                android:textColor="@color/gray"
                android:textSize="19sp" />

        </LinearLayout>

        <!-- Review List -->
    </LinearLayout>

    <EditText
        android:layout_margin="10dp"
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:backgroundTint="@color/background_light_blur_1"
        android:background="@drawable/rounded_edittext"
        android:gravity="top"
        android:hint="Hãy chia sẻ nhận xét cho sản phẩm này bạn nhé!"
        />


</LinearLayout>