<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.MyProfile.MyAccount.VerifyAccountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_left"
                android:scaleType="fitCenter"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_marginStart="15dp"
                android:text="Xác minh tài khoản"
                android:textColor="@color/black"
                android:textSize="11pt" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/background_light_blur_1" />

        <LinearLayout
            android:id="@+id/my_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="1"
                android:paddingEnd="20dp"
                android:background="@null"
                android:textColor="@color/black"
                android:text="Để tăng cường bảo mật cho tài khoản của bạn, hãy xác minh thông tin."
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_VerifyPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext"
            android:orientation="horizontal"> <!-- Thêm sự kiện onClick -->


            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/todo"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:src="@drawable/padlock" /> <!-- Điều chỉnh khoảng cách giữa icon và chữ -->

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="start"
                android:text="Xác minh bằng mật khẩu"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="22sp" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>