<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15pt"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:text="Đăng ký" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            app:endIconMode="clear_text"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTenDangNhap_DangKy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:hint="Tên đăng nhập"
                android:textSize="10pt"
                android:paddingStart="15dp"
                android:paddingEnd="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            app:endIconMode="clear_text"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:background="@drawable/rounded_edittext"
                android:inputType="text"
                android:hint="Email"
                android:textSize="10pt"
                android:paddingStart="15dp"
                android:paddingEnd="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sử dụng TextInputLayout cho mật khẩu với biểu tượng ẩn/hiện -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/green"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPasswordRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPassword"
                android:hint="Mật khẩu"
                android:textSize="10pt"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sử dụng TextInputLayout cho nhập lại mật khẩu với biểu tượng ẩn/hiện -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/green"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPasswordRegister2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPassword"
                android:hint="Nhập lại mật khẩu"
                android:textSize="10pt"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="11pt"
            android:backgroundTint="@color/green"
            android:text="Đăng ký" />
    </LinearLayout>
</FrameLayout>
