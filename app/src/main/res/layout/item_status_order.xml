<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="8dp">

<!--    <ImageView-->
<!--        android:id="@+id/imgPro"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/apple" />-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPro"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_border"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/textView14"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:text="1 sản phẩm" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tvPrice"
        android:textSize="14sp"
        android:text="Giá thực:" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="  291.000 đ" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPrice"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/imgPro"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edittext_order"
            android:textAllCaps="false"
            android:textSize="18sp"

            android:text="Hủy" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:background="@drawable/rounded_edittext_order"
            android:text="Xác nhận" />
    </LinearLayout>

</RelativeLayout>